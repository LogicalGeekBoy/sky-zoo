{
    "display": {
        "icon": {
            "item": "minecraft:<%= icon %>"
            <% if custom_mob_head? %>
                , "nbt": "{SkullOwner:{Id:'<%= owner_id %>',Name:'<%= name %>',Properties:{textures:[{Value:'<%= texture %>'}]}}}"
            <% end %>
        },
        "title": {
            "text": "Capture <%= name %>",
            "color": "white",
            "bold": false,
            "italic": false
        },
        "description": {
            "text": "Unlock the <%= trade %> trade",
            "color": "green",
            "bold": false,
            "italic": true
        },
        "show_toast": true,
        "announce_to_chat": false,
        "frame": "task",
        "hidden": "false"
    },
    "parent": "sky_zoo:<%= dimension %>_mobs",
    "criteria": {
        "capture": {
            "trigger": "minecraft:impossible"
        }
    },
    "rewards": {
        "function": "sky_zoo:rewards/<%= id %>_reward"
    }
}
